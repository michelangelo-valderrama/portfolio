---
import { cn } from "@/lib/utils"
import type { HTMLAttributes } from "astro/types"

interface Props extends HTMLAttributes<"a"> {}
---

<a
  target="_blank"
  rel="noopener noreferrer"
  class={cn(
    "flex justify-center items-center group translate-x-12 hover:translate-x-0 transition",
    Astro.props.class
  )}
  {...Astro.props}
>
  <slot />
  <slot name="icon" />
</a>
