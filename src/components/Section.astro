---
import { cn } from "@/lib/utils"

interface Props {
  as: string
  class?: string
  frameColor?: string
}

const { as: As = "section", frameColor = "#000", ...props } = Astro.props
---

<As
  {...props}
  section
  data-color={Astro.props.frameColor}
  class={cn("size-full p-4 overflow-hidden", Astro.props.class)}
>
  <slot />
</As>
