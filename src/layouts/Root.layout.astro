---
import NoiseEffect from "@/components/NoiseEffect.astro"
import Header from "@/components/Header.astro"
import Footer from "@/components/Footer.astro"
import GridOverlay from "@/components/GridOverlay.astro"
import "@/styles/global.css"
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body class="font-sans text-foreground bg-black h-dvh">
    <div class="p-[var(--fp)] size-full fixed top-0 left-0 bg-border/70">
      <div class="relative size-full rounded-2xl bg-background"></div>
    </div>
    <Header />
    <main class="h-full p-[var(--fp)]">
      <div
        class="relative h-full rounded-2xl overflow-x-hidden overflow-y-scroll"
      >
        <slot />
      </div>
    </main>
    <Footer class="hidden lg:block" />
    <NoiseEffect />
    <!-- <GridOverlay /> -->
  </body>
</html>
