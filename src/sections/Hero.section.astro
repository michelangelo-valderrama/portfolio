---
import Section from '@/components/Section.astro'
import TextAnim from '@/components/TextAnim.astro'
---

<Section
  id="home"
  anim
  frame="20 8% 0%"
  fg="51 22% 69%"
  bg="20 8% 0%"
  class={`
    flex justify-center items-center
    xs:transition-all xs:duration-500 xs:opacity-0
    text-foreground
  `}
>
  <div class="px-2 uppercase select-none flex items-center justify-center">
    <div class="text-center">
      <h1
        class="text-5xl xs:text-6xl sm:text-7xl md:text-8xl font-serif italic"
      >
        <TextAnim trigger class="px-2" h="4rem">Michelangelo</TextAnim>
      </h1>
      <p class="text-xs sm:text-base md:text-lg font-bold">
        <TextAnim trigger d="400ms" h="2.5rem">
          Full stack developer & web designer
        </TextAnim>
      </p>
    </div>
  </div>
</Section>
