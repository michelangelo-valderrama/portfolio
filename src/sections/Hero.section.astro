---
import Section from "@/components/Section.astro"
import StarsEffect from "@/components/StarsEffect.astro"
import TextAnim from "@/components/TextAnim.astro"
import Mesh from "@/svgs/Mesh.svg.astro"
---

<Section class="flex flex-col justify-end items-center absolute top-0 left-0">
  <div class="text-center mb-6 lg:mb-12 px-2">
    <h1 class="text-4xl sm:text-5xl md:text-7xl font-bold font-serif">
      <TextAnim h="4.25rem">MICHELANGELO</TextAnim>
    </h1>
    <p class="text-sm sm:text-base">
      <TextAnim d="400ms" h="2.5rem">
        FULL STACK DEVELOPER AND PASSIONATE ABOUT ART AND SCIENCE
      </TextAnim>
    </p>
  </div>
  <div
    class="flex items-center justify-center absolute top-0 left-0 size-full pointer-events-none pb-20 px-8"
  >
    <Mesh
      id="mesh"
      class="h-full max-h-[500px] w-auto text-accent-foreground"
      stroke-dasharray="1000"
      stroke-dashoffset="1000"
    />
  </div>
</Section>
<StarsEffect />

<style>
  #mesh {
    animation: dash 1500ms forwards ease-in;
  }

  @keyframes dash {
    to {
      stroke-dashoffset: 0;
    }
  }
</style>
